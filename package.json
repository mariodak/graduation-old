  "dependencies": {
    "babel-cli": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "node-sass": "^4.7.2",
    "node-sass-chokidar": "0.0.3",
    "nodetools": "0.0.2",
    "npm-run-all": "^4.1.2",
    "pug": "^2.0.0-rc.4",
    "pug-cli": "^1.0.0-alpha6"
  }
